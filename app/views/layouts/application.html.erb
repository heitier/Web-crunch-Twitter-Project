<!DOCTYPE html>
<html>
  <head>
    <title>Fwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <div class="notification is-primary global-notification">
      <p class="notice"><%= notice%></p>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="notification is-danger global-notification"></div>
    <p class="alert"><%= alert %></p>
    <% end %>

    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-5">Fwitter</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
            <span></span>
            <span></span>
            <span></span>
        </div>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <div class="navbar-item">
            <p class="control button is-info is-inverted">
              <% link_to 'New Tweeet', new_tweeet_path, class: "button is-info is-inverted" %>
              N
            </p>
          </div>
        </div>
      </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <p class="control">
                <% link_to 'New Tweeet', new_tweeet_path, class: "button is-info is-inverted" %>
              </p>
              <p class="control button is-primary"><strong>Sign up</strong></p>
              <p class="control button is-light">Log in</p>
          </div>
        </div>
       </div>
      </div>
    </nav>
    <%= yield %>

  </body>
</html>
